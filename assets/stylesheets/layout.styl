@import colours

/**
  GLOBAL
*/
html
  height 100%
  width 100%
body
  height inherit
  margin-bottom 40px
.transparent
  background transparent
/**
  HEADER
*/
nav
  background white
  transition all 0.4s ease
/**
  CONTENT
*/
#hero
  //position absolute
  height 100%
  width 100%
#hero-image
  background-image url(../images/hero_wolf_bw.jpg)
  background-position center
  background-size cover
  background-repeat no-repeat
  height 100%
/**
  FOOTER
*/
.footer
  text-align center
  width 100%
  height 40px
