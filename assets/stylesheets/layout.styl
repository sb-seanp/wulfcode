@import colours

/**
  GLOBAL
*/
html
  position relative
  height 100%
body
  margin-bottom 40px
.wrapper
  min-height 100%
.transparent
  background transparent
/**
  HEADER
*/
nav
  background white
  transition all 0.4s ease
/**
  CONTENT
*/
#hero-image
  background url(../images/hero_wolf_bw.jpg) no-repeat center center
  background-size cover
  height 100vh
/**
  FOOTER
*/
.footer
  position absolute
  bottom 0
  width 100%
  height 40px
